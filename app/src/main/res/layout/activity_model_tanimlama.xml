<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ModelTanimlama"
    android:orientation="vertical"
    android:background="@drawable/onr11">

    <include layout="@layout/baslik"/>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="@drawable/text_view_shape"
        android:text="Marka Seçiniz: "
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="30dp" />

    <Spinner
        android:id="@+id/spn_marka"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="20dp"
        android:dropDownVerticalOffset="80dp"
        android:scrollbarSize="100sp"
        android:textAlignment="center"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"/>

    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mevcut Modeller: "
        android:textAlignment="center"
        android:background="@drawable/text_view_shape"
        android:layout_marginTop="30dp"
        android:textColor="@color/white"
        android:textSize="30dp" />

    <Spinner
        android:id="@+id/spn_model"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="20dp"
        android:dropDownVerticalOffset="80dp"
        android:scrollbarSize="100sp"
        android:textAlignment="center"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"/>

    <EditText
        android:id="@+id/model_adi_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="35dp"
        android:textAlignment="center"
        android:layout_marginBottom="30dp"
        android:background="@drawable/edit_text_shape"
        android:textColor="@color/black"
        android:hint=" Model Adı Giriniz:"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

    </EditText>

    <EditText
        android:id="@+id/model_aciklama_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:textSize="35dp"
        android:textAlignment="center"
        android:background="@drawable/edit_text_shape"
        android:hint=" Açıklamayı Giriniz:"
        android:textColor="@color/black"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

    </EditText>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/kaydet_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Kaydet"
            android:textSize="20dp"
            android:backgroundTint="#039BE5"
            android:layout_marginRight="5dp">

        </Button>

        <Button
            android:id="@+id/guncelle_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Güncelle"
            android:textSize="20dp"
            android:backgroundTint="#039BE5"
            android:layout_marginRight="5dp">

        </Button>

        <Button
            android:id="@+id/sil_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.3"
            android:text="Sil"
            android:textSize="20dp"
            android:backgroundTint="#039BE5">

        </Button>

    </LinearLayout>

</LinearLayout>