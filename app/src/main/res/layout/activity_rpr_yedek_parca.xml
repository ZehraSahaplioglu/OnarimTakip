<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RPR_YedekParca"
    android:orientation="vertical"
    android:background="@drawable/onr11">

    <include layout="@layout/baslik"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mevcut Yedek ParÃ§a Tipleri: "
                android:textAlignment="center"
                android:background="@drawable/text_view_shape"
                android:layout_marginTop="30dp"
                android:textSize="30dp"
                android:textColor="@color/white"/>

            <Spinner
                android:id="@+id/spn_yedekparcatip"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="20dp"
                android:dropDownVerticalOffset="80dp"
                android:scrollbarSize="100sp"
                android:textAlignment="center"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"/>

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mevcut Markalar: "
                android:textAlignment="center"
                android:background="@drawable/text_view_shape"
                android:layout_marginTop="30dp"
                android:textSize="30dp"
                android:textColor="@color/white" />

            <Spinner
                android:id="@+id/spn_parcamarka"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:dropDownVerticalOffset="80dp"
                android:scrollbarSize="100sp"
                android:textAlignment="center"
                android:layout_marginBottom="30dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"/>

            <TextView
                android:id="@+id/sayitextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:background="@drawable/text_view_shape"
                android:layout_marginTop="30dp"
                android:textSize="30dp"
                android:textColor="@color/white" />

            <com.github.mikephil.charting.charts.BarChart
                android:layout_width="match_parent"
                android:layout_height="700dp"
                android:layout_marginTop="20dp"
                android:id="@+id/modelegoreparca_rapor">

            </com.github.mikephil.charting.charts.BarChart>

        </LinearLayout>

    </ScrollView>

</LinearLayout>