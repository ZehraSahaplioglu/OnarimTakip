<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".YedekParcaIslemleri"
    android:scrollbarSize="20dp"
    android:orientation="vertical"
    android:background="@drawable/onr11">

    <include layout="@layout/baslik"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mevcut Yedek Parça Tipleri: "
                android:textColor="@color/white"
                android:textAlignment="center"
                android:background="@drawable/text_view_shape"
                android:layout_marginTop="30dp"
                android:textSize="30dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp">

                <Spinner
                    android:id="@+id/spn_yedekparcatip"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_weight="1"
                    android:dropDownVerticalOffset="100dp"
                    android:scrollbarSize="200sp"
                    android:textAlignment="center"
                    android:layout_marginRight="5dp"/>

                <ImageButton
                    android:id="@+id/yedekparcaButton"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_weight="5"
                    android:background="@drawable/add_circle_24"
                    android:layout_marginTop="10dp"/>

            </LinearLayout>

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mevcut Yedek Parçalar: "
                android:textColor="@color/white"
                android:textAlignment="center"
                android:background="@drawable/text_view_shape"
                android:layout_marginTop="30dp"
                android:textSize="30dp" />

            <Spinner
                android:id="@+id/spn_yedekparca"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:dropDownVerticalOffset="80dp"
                android:scrollbarSize="100sp"
                android:textAlignment="center"
                android:layout_marginBottom="30dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"/>

            <EditText
                android:id="@+id/parca_adi_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="30dp"
                android:layout_marginBottom="30dp"
                android:background="@drawable/edit_text_shape"
                android:textColor="@color/black"
                android:hint="Yedek Parça Adı:"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:textAlignment="center">

            </EditText>

            <EditText
                android:id="@+id/aciklama_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="30dp"
                android:layout_marginBottom="30dp"
                android:background="@drawable/edit_text_shape"
                android:textColor="@color/black"
                android:hint="Açıklama:"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:textAlignment="center">

            </EditText>

            <EditText
                android:id="@+id/editTextfiyat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="35dp"
                android:layout_marginRight="35dp"
                android:background="@drawable/edit_text_shape"
                android:textColor="@color/black"
                android:textSize="25dp"
                android:textAlignment="center"
                android:hint=" Parça fiyatını girin: "
                android:ems="10"
                android:inputType="number" />

            <EditText
                android:id="@+id/editTextstok"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="35dp"
                android:layout_marginRight="35dp"
                android:hint=" Parça stok miktarını girin: "
                android:background="@drawable/edit_text_shape"
                android:textColor="@color/black"
                android:textAlignment="center"
                android:textSize="25dp"
                android:layout_marginTop="25dp"
                android:ems="10"
                android:inputType="number" />

            <EditText
                android:id="@+id/editTextstokmin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="35dp"
                android:layout_marginRight="35dp"
                android:hint=" Min stok miktarı: "
                android:background="@drawable/edit_text_shape"
                android:textColor="@color/black"
                android:textSize="25dp"
                android:textAlignment="center"
                android:layout_marginTop="25dp"
                android:ems="10"
                android:inputType="number" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mevcut Markalar: "
                android:textAlignment="center"
                android:background="@drawable/text_view_shape"
                android:textColor="@color/white"
                android:layout_marginTop="30dp"
                android:textSize="25dp" />

            <Spinner
                android:id="@+id/spn_marka"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="20dp"
                android:dropDownVerticalOffset="80dp"
                android:scrollbarSize="100sp"
                android:textAlignment="center"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"/>

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mevcut Moddeller: "
                android:textAlignment="center"
                android:background="@drawable/text_view_shape"
                android:textColor="@color/white"
                android:layout_marginTop="10dp"
                android:textSize="25dp" />

            <Spinner
                android:id="@+id/spn_model"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="30dp"
                android:dropDownVerticalOffset="80dp"
                android:scrollbarSize="100sp"
                android:textAlignment="center"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="40dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="50dp">

                <Button
                    android:id="@+id/kaydet_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Kaydet"
                    android:textSize="20dp"
                    android:backgroundTint="#039BE5"
                    android:layout_marginRight="5dp">

                </Button>

                <Button
                    android:id="@+id/guncelle_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Güncelle"
                    android:textSize="20dp"
                    android:backgroundTint="#039BE5"
                    android:layout_marginRight="5dp">

                </Button>

                <Button
                    android:id="@+id/sil_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.3"
                    android:text="Sil"
                    android:textSize="20dp"
                    android:backgroundTint="#039BE5">

                </Button>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>