<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OnarimIslemleri"
    android:orientation="vertical"
    android:background="@drawable/onr11">

    <include layout="@layout/baslik"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="10dp">

        <EditText
            android:id="@+id/onarim_islemleri_edit"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_weight="0.35"
            android:background="@drawable/edit_text_shape"
            android:dropDownVerticalOffset="100dp"
            android:scrollbarSize="200sp"
            android:textAlignment="center"
            android:textSize="30dp"
            android:hint="Envanter No Girin:"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:textColor="@color/black"/>

        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:id="@+id/ara_Button"
            android:background="@drawable/search_24">

        </ImageButton>

        <ImageButton
            android:id="@+id/yeni_onarim_Button"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:background="@drawable/tamir"
            android:layout_marginRight="5dp"/>


    </LinearLayout>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mevcut OnarÄ±mlar: "
        android:textColor="@color/white"
        android:textAlignment="center"
        android:background="@drawable/text_view_shape"
        android:layout_marginTop="20dp"
        android:textSize="30dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/layout_onarim"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="20dp">

        </LinearLayout>

    </ScrollView>


</LinearLayout>