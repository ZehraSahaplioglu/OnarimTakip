<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:scrollbarSize="20dp"
    tools:context=".TipTanimlama"
    android:background="@drawable/onr11">

    <include layout="@layout/baslik"/>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mevcut Tipler: "
        android:textAlignment="center"
        android:background="@drawable/text_view_shape"
        android:layout_marginTop="50dp"
        android:textSize="30dp"
        android:textColor="@color/white" />

    <Spinner
        android:id="@+id/mevcuttiplerspinner"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="30dp"
        android:textAlignment="center"
        />

    <EditText
        android:id="@+id/tip_adi_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:textAlignment="center"
        android:layout_marginBottom="30dp"
        android:background="@drawable/edit_text_shape"
        android:textColor="@color/black"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="50dp">

    </EditText>

    <EditText
        android:id="@+id/tip_aciklama_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:textSize="30dp"
        android:textAlignment="center"
        android:background="@drawable/edit_text_shape"
        android:textColor="@color/black"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp">

    </EditText>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/tip_kaydet_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Kaydet"
            android:textSize="20dp"
            android:backgroundTint="#039BE5"
            android:layout_marginRight="5dp">

        </Button>

        <Button
            android:id="@+id/tip_guncelle_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="GÃ¼ncelle"
            android:textSize="20dp"
            android:backgroundTint="#039BE5"
            android:layout_marginRight="5dp">

        </Button>

        <Button
            android:id="@+id/tip_sil_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.3"
            android:text="Sil"
            android:textSize="20dp"
            android:backgroundTint="#039BE5">

        </Button>

    </LinearLayout>

</LinearLayout>